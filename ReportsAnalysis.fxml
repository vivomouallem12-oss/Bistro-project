<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="1200" prefHeight="650"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.ReportsAnalysisController"
            style="-fx-background-color: linear-gradient(to bottom, #0e1320, #111b34);">

    <center>
        <VBox alignment="TOP_CENTER" spacing="30"
              style="-fx-padding: 30;">

            <VBox alignment="CENTER" spacing="6"
                  prefWidth="900"
                  style="-fx-padding: 26 40;
                         -fx-background-radius: 30;
                         -fx-background-color: linear-gradient(to right, #5240d0, #e3a628);
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 25, 0.35, 0, 6);">

                <Label text="Reports And Analysis"
                       style="-fx-text-fill: white;
                              -fx-font-size: 30;
                              -fx-font-weight: bold;"/>

                <Label text="Monthly operational reports"
                       style="-fx-text-fill: #eeeeee;
                              -fx-font-size: 14;"/>
            </VBox>

            <HBox spacing="30" alignment="CENTER">

                <VBox spacing="14" prefWidth="520"
                      style="-fx-padding: 22;
                             -fx-background-radius: 22;
                             -fx-background-color: #2b2f45;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 18, 0.3, 0, 5);">

                    <Label text="Arrival Delays Waiting Times"
                           style="-fx-text-fill: white;
                                  -fx-font-size: 18;
                                  -fx-font-weight: bold;"/>

                    <LineChart fx:id="arrivalChart"
                               prefHeight="280"
                               legendVisible="false">
                        <xAxis>
                            <CategoryAxis label="Day"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Minutes"/>
                        </yAxis>
                    </LineChart>

                </VBox>

                <VBox spacing="14" prefWidth="520"
                      style="-fx-padding: 22;
                             -fx-background-radius: 22;
                             -fx-background-color: #2b2f45;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 18, 0.3, 0, 5);">

                    <Label text="Monthly Reservations and Waiting List"
                           style="-fx-text-fill: white;
                                  -fx-font-size: 18;
                                  -fx-font-weight: bold;"/>

                    <BarChart fx:id="reservationChart"
                              prefHeight="280">
                        <xAxis>
                            <CategoryAxis label="Week"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Count"/>
                        </yAxis>
                    </BarChart>

                </VBox>

            </HBox>

        </VBox>
    </center>

</BorderPane>
