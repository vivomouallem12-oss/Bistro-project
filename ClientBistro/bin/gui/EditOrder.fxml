<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.EditOrderFrameController">

    <Label text="Order Number:" GridPane.columnIndex="0" GridPane.rowIndex="0">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="txtOrderNumber" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0">
      <GridPane.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </GridPane.margin></TextField>

    <Label text="Order Date:" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="txtOrderDate" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </GridPane.margin></TextField>

    <Label text="Number of Guests:" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="txtGuests" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </GridPane.margin></TextField>

    <Label text="Confirmation Code:" GridPane.columnIndex="0" GridPane.rowIndex="3">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="txtConfirmationCode" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <GridPane.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </GridPane.margin></TextField>

    <Label text="Subscriber ID:" GridPane.columnIndex="0" GridPane.rowIndex="4">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="txtSubscriberId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4">
      <GridPane.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </GridPane.margin></TextField>

    <Label text="Date of Placing Order:" GridPane.columnIndex="0" GridPane.rowIndex="5">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="txtPlacedOn" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <GridPane.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </GridPane.margin></TextField>
   
   <Button fx:id="btnSave" onAction="#saveOrder" text="Save" GridPane.columnIndex="1" GridPane.rowIndex="6">
      <GridPane.margin>
         <Insets bottom="10.0" left="60.0" right="10.0" top="10.0" />
      </GridPane.margin></Button>
      
   <Button fx:id="btnReturn" mnemonicParsing="false" text="Return" onAction="#returns" GridPane.rowIndex="6">
      <GridPane.margin>
         <Insets bottom="10.0" left="35.0" right="10.0" top="10.0" />
      </GridPane.margin></Button>
   
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
