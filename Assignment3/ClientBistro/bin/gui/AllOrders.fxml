<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AllOrdersFrameController">
    
    <TableView fx:id="ordersTable" layoutX="0" layoutY="0" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="colOrderNumber" maxWidth="300.0" prefWidth="100" text="Order Number" />
            <TableColumn fx:id="colOrderDate" maxWidth="300.0" prefWidth="120" text="Order Date" />
            <TableColumn fx:id="colGuests" maxWidth="300.0" prefWidth="127.5" text="Guests" />
            <TableColumn fx:id="colConfirmation" maxWidth="300.0" prefWidth="160.5" text="Confirmation Code" />
            <TableColumn fx:id="colSubscriber" maxWidth="300.0" minWidth="11.0" prefWidth="134.5" text="Subscriber ID" />
            <TableColumn fx:id="colPlacedOn" maxWidth="300.0" prefWidth="146.5" text="Placed On" />
        </columns>
    </TableView>

    <!-- Input field + button at bottom -->
    <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="410" prefHeight="40" prefWidth="800" spacing="10">
        <TextField fx:id="orderNumberInput" promptText="Enter order number">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin></TextField>
        <Button fx:id="editBtn" onAction="#editOrder" text="Edit" />
    </HBox>

</AnchorPane>
