<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.OpeningHoursController">

    <Label text="Opening Hours Management"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <ComboBox fx:id="dayBox"
              promptText="Select day"
              maxWidth="200"/>

    <TextField fx:id="openField"
               promptText="Opening Time (HH:MM)"
               maxWidth="200"/>

    <TextField fx:id="closeField"
               promptText="Closing Time (HH:MM)"
               maxWidth="200"/>

    <Button text="Save Hours"
            onAction="#saveHours"/>

    <Label fx:id="statusLabel"/>

</VBox>
