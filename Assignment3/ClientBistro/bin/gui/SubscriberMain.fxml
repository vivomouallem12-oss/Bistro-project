<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="rootPane"
            fx:controller="gui.SubscriberMainController"
            prefWidth="900" prefHeight="560"
            style="-fx-background-color: linear-gradient(to bottom, #0e1320, #111b34);">

    <children>

        <VBox alignment="TOP_CENTER"
              spacing="25"
              prefWidth="900" prefHeight="560">

            <!-- ===== HEADER ===== -->
            <VBox alignment="CENTER"
                  spacing="5"
                  prefWidth="820"
                  style="-fx-padding: 25 40;
                         -fx-background-radius: 25;
                         -fx-background-color: linear-gradient(to right, #5240d0, #e3a628);
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 20, 0.3, 0, 5);">

                <children>
                    <Label fx:id="lblWelcome"
                           text="Welcome, (ID: ?)"
                           style="-fx-text-fill: white;
                                  -fx-font-size: 28px;
                                  -fx-font-weight: bold;"/>

                    <Label text="Subscriber Dashboard"
                           style="-fx-text-fill: #dadada;
                                  -fx-font-size: 14px;"/>
                </children>
            </VBox>


            <!-- ===== FEATURE CARDS ===== -->
            <HBox spacing="25"
                  alignment="CENTER"
                  prefWidth="820">

                <children>

                    <!-- CARD 1 -->
                    <VBox spacing="6"
                          alignment="TOP_LEFT"
                          prefWidth="220" prefHeight="110"
                          style="-fx-padding: 18;
                                 -fx-background-radius: 20;
                                 -fx-background-color: #403628;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 15, 0.3, 0, 5);">

                        <children>
                            <Label text="Reservations"
                                   style="-fx-text-fill: white;
                                          -fx-font-size: 17;
                                          -fx-font-weight: bold;"/>
                            <Label text="Book a table easily"
                                   style="-fx-text-fill: #cfcfcf;"/>
                        </children>
                    </VBox>


                    <!-- CARD 2 -->
                    <VBox spacing="6"
                          alignment="TOP_LEFT"
                          prefWidth="220" prefHeight="110"
                          style="-fx-padding: 18;
                                 -fx-background-radius: 20;
                                 -fx-background-color: #2d1f52;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 15, 0.3, 0, 5);">

                        <children>
                            <Label text="Waiting List"
                                   style="-fx-text-fill: white;
                                          -fx-font-size: 17;
                                          -fx-font-weight: bold;"/>
                            <Label text="Join instantly"
                                   style="-fx-text-fill: #cfcfcf;"/>
                        </children>
                    </VBox>


                    <!-- CARD 3 -->
                    <VBox spacing="6"
                          alignment="TOP_LEFT"
                          prefWidth="220" prefHeight="110"
                          style="-fx-padding: 18;
                                 -fx-background-radius: 20;
                                 -fx-background-color: #0f3a26;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 15, 0.3, 0, 5);">

                        <children>
                            <Label text="Payments"
                                   style="-fx-text-fill: white;
                                          -fx-font-size: 17;
                                          -fx-font-weight: bold;"/>
                            <Label text="Fast  Secure"
                                   style="-fx-text-fill: #cfcfcf;"/>
                        </children>
                    </VBox>

                </children>
            </HBox>


            <!-- ===== BUTTONS ===== -->
            <VBox spacing="10" alignment="CENTER">

                <children>

                    <Button fx:id="btnMakeReservation"
                            text="Reservation"
                            onAction="#onMakeReservation"
                            style="-fx-background-radius: 12;
                                   -fx-background-color: #2b2f45;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16;
                                   -fx-pref-width: 380;"/>

                    <Button fx:id="btnJoinWaitingList"
                            text="Join Waiting List"
                            onAction="#onJoinWaitingList"
                            style="-fx-background-radius: 12;
                                   -fx-background-color: #2b2f45;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16;
                                   -fx-pref-width: 380;"/>

                    <Button fx:id="btnPayBill"
                            text="Pay Bill"
                            onAction="#onPayBill"
                            style="-fx-background-radius: 12;
                                   -fx-background-color: #2b2f45;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16;
                                   -fx-pref-width: 380;"/>

                    <Button fx:id="btnMyAccount"
                            text="My Account  History"
                            onAction="#onMyAccount"
                            style="-fx-background-radius: 12;
                                   -fx-background-color: #2b2f45;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16;
                                   -fx-pref-width: 380;"/>

                    <Button fx:id="btnLogout"
                            text="Logout"
                            onAction="#onLogout"
                            style="-fx-background-radius: 12;
                                   -fx-background-color: #8a1b1b;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16;
                                   -fx-pref-width: 380;"/>

                </children>
            </VBox>

        </VBox>

    </children>

</AnchorPane>
