<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.WaitingListController"
      stylesheets="@waitinglist.css"
      alignment="TOP_CENTER"
      spacing="25"
      styleClass="root">

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT"
          spacing="15"
          styleClass="header">
        <Label text="ðŸ½ Bistro"
               styleClass="header-title"/>
        <Label text="Waiting List"
               styleClass="header-subtitle"/>
    </HBox>

    <!-- CARD -->
    <VBox spacing="18"
          alignment="TOP_CENTER"
          styleClass="card">

        <Label text="Join Waiting List"
               styleClass="section-title"/>

        <TextField fx:id="txtGuests"
                   promptText="Number of guests"/>

        <Button text="Join Waiting List"
                onAction="#onJoinWaitingList"
                styleClass="primary-btn"/>

        <Separator/>

        <Label text="Leave Waiting List"
               styleClass="section-title"/>

        <TextField fx:id="txtConfirmationCode"
                   promptText="Confirmation code"/>

        <Button text="Leave Waiting List"
                onAction="#onLeaveWaitingList"
                styleClass="danger-btn"/>

        <Button text="Back"
                onAction="#onBack"
                styleClass="secondary-btn"/>

    </VBox>
</VBox>
