<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.RepresentativeHomepageController">

    <top>
        <Label text="Representative Dashboard"
               style="-fx-font-size: 22px; -fx-padding: 20;" />
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">

            <Button text="Register Subscriber"
                    onAction="#onRegisterSubscriber"
                    prefWidth="220"/>

            <Button text="Manage Tables"
                    onAction="#onManageTables"
                    prefWidth="220"/>

         <Button text="Opening Hours"
        onAction="#onOpeningHours"
        prefWidth="220"/>


            <Button text="View Reservations"
        onAction="#onViewReservations"
        prefWidth="220"/>


            <Button text="Waiting List"
            onAction="#onWaitingList"
                    prefWidth="220"/>

            <Button text="Logout"
        onAction="#onLogout"
        prefWidth="220"/>


        </VBox>
    </center>

</BorderPane>
