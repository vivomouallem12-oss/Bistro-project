<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.SubscriberReservationController"
            prefWidth="1100" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom, #0e1320, #111b34);">

    <children>
        <VBox spacing="30"
              alignment="TOP_CENTER"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <!-- ===== HEADER ===== -->
            <VBox alignment="CENTER"
                  spacing="6"
                  prefWidth="900"
                  style="-fx-padding: 28 40;
                         -fx-background-radius: 30;
                         -fx-background-color: linear-gradient(to right, #5240d0, #e3a628);">

                <Label text="Make a Reservation"
                       style="-fx-text-fill: white;
                              -fx-font-size: 30px;
                              -fx-font-weight: bold;"/>

                <Label fx:id="lblWelcome"
                       text="Welcome back"
                       style="-fx-text-fill: #eeeeee;
                              -fx-font-size: 14px;"/>
            </VBox>

            <!-- ===== CONTENT ===== -->
            <HBox spacing="30"
                  alignment="TOP_CENTER"
                  prefWidth="900">

                <!-- ===== LEFT CARD ===== -->
                <VBox spacing="20"
                      prefWidth="520"
                      style="-fx-padding: 25;
                             -fx-background-radius: 25;
                             -fx-background-color: white;">

                    <!-- ===== RESERVATION ===== -->
                    <Label text="Reservation Details"
                           style="-fx-font-size: 18;
                                  -fx-font-weight: bold;"/>

                    <VBox spacing="6">
                        <Label text="Reservation Date"/>
                        <DatePicker fx:id="datePicker" prefWidth="460"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Reservation Time"/>
                        <ComboBox fx:id="timeBox" prefWidth="460"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Number of Guests"/>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Button text="âˆ’" onAction="#decGuests" prefWidth="40"/>
                            <Label fx:id="lblGuests"
                                   text="2"
                                   style="-fx-font-size: 18;
                                          -fx-font-weight: bold;"/>
                            <Button text="+" onAction="#incGuests" prefWidth="40"/>
                        </HBox>
                    </VBox>

                    <Button text="Reserve Table"
                            onAction="#onReserve"
                            prefWidth="460"
                            style="-fx-background-color: #e07b00;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 14;"/>

                    <Separator/>

                    <!-- ===== CHECK IN ===== -->
                    <Label text="Already have a reservation?"
                           style="-fx-font-size: 15;
                                  -fx-font-weight: bold;"/>

                    <TextField fx:id="txtConfirmationCode"
                               promptText="Enter confirmation code"
                               prefWidth="460"/>

                    <Button text="Check Reservation"
                            onAction="#onCheckIn"
                            prefWidth="460"
                            style="-fx-background-color: #2ecc71;
                                   -fx-text-fill: white;
                                   -fx-font-size: 15;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 14;"/>

                    <!-- ===== FORGOT CODE ===== -->
                    <Button text="Forgot confirmation code?"
                            onAction="#onForgotConfirmationCode"
                            prefWidth="460"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: #5555aa;
                                   -fx-font-size: 13;
                                   -fx-underline: true;"/>

                    <Separator/>

                    <Button text="Back to Dashboard"
                            onAction="#onBack"
                            prefWidth="460"
                            style="-fx-background-color: #2b2f45;
                                   -fx-text-fill: white;
                                   -fx-font-size: 14;
                                   -fx-background-radius: 14;"/>
                </VBox>

                <!-- ===== RIGHT CARD ===== -->
                <VBox spacing="15"
                      prefWidth="320"
                      style="-fx-padding: 25;
                             -fx-background-radius: 25;
                             -fx-background-color: white;">

                    <Label text="Saved Subscriber Details"
                           style="-fx-font-size: 16;
                                  -fx-font-weight: bold;"/>

                    <Separator/>

                    <Label text="Name:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblName"/>

                    <Label text="Email:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblEmail"/>

                    <Label text="Phone:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblPhone"/>
                </VBox>

            </HBox>
        </VBox>
    </children>
</AnchorPane>
