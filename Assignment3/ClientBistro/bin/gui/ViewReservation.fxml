<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.ViewReservationsController">

    <Label text="All Reservations"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TableView fx:id="reservationsTable"
               prefWidth="520"
               prefHeight="300">

        <columns>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="130"/>
            <TableColumn fx:id="timeCol" text="Time" prefWidth="130"/>
            <TableColumn fx:id="guestsCol" text="Guests" prefWidth="130"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="130"/>
        </columns>

    </TableView>

</VBox>