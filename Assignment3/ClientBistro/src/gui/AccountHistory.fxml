<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.AccountHistoryController"
            style="-fx-background-color: linear-gradient(to bottom, #0e1320, #111b34);">

    <!-- ================= HEADER ================= -->
    <top>
        <VBox spacing="10"
              style="-fx-background-radius: 25;
                     -fx-background-color: linear-gradient(to right, #5240d0, #7a5cff);">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <Label text="My Account History"
                   style="-fx-font-size: 26px;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;"/>

            <Label text="Subscriber Dashboard"
                   style="-fx-text-fill: #d6dcff;"/>
        </VBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox spacing="25">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- ===== STATS CARDS ===== -->
            <HBox spacing="20">

                <VBox spacing="5"
                      prefWidth="220"
                      style="-fx-background-radius: 20;
                             -fx-background-color: #1b2340;">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Total Visits"
                           style="-fx-text-fill: #9aa4ff;"/>
                    <Label text="24"
                           style="-fx-font-size: 22px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: white;"/>
                </VBox>

                <VBox spacing="5"
                      prefWidth="220"
                      style="-fx-background-radius: 20;
                             -fx-background-color: #1b2340;">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Member Since"
                           style="-fx-text-fill: #9aa4ff;"/>
                    <Label text="January 2024"
                           style="-fx-font-size: 18px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: white;"/>
                </VBox>

            </HBox>

            <!-- ===== TABS ===== -->
            <TabPane>

                <!-- VISITS -->
                <Tab text="Visit History">
                    <BorderPane>
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>

                        <center>
                            <TableView fx:id="visitsTable"
                                       style="-fx-background-radius: 15;
                                              -fx-background-color: #141c3a;">
                                <columns>
                                    <TableColumn fx:id="colVisitDate" text="Date"/>
                                    <TableColumn fx:id="colVisitPeople" text="Guests"/>
                                    <TableColumn fx:id="colVisitStatus" text="Status"/>
                                </columns>
                            </TableView>
                        </center>
                    </BorderPane>
                </Tab>

                <!-- RESERVATIONS -->
                <Tab text="Reservations">
                    <BorderPane>
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>

                        <center>
                            <TableView fx:id="reservationsTable"
                                       style="-fx-background-radius: 15;
                                              -fx-background-color: #141c3a;">
                                <columns>
                                    <TableColumn fx:id="colResId" text="ID"/>
                                    <TableColumn fx:id="colResDate" text="Date"/>
                                    <TableColumn fx:id="colGuests" text="Guests"/>
                                    <TableColumn fx:id="colResStatus" text="Status"/>
                                </columns>
                            </TableView>
                        </center>
                    </BorderPane>
                </Tab>

            </TabPane>
        </VBox>
    </center>

    <!-- ================= BOTTOM ================= -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="btnBack"
                    text="Back"
                    prefWidth="140"
                    style="-fx-background-radius: 20;
                           -fx-background-color: #c0392b;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;"/>
        </HBox>
    </bottom>

</BorderPane>
