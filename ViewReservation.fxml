<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="1200" prefHeight="650"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.ViewReservationsController"
            style="-fx-background-color: linear-gradient(to bottom, #0e1320, #111b34);">

    <center>
        <VBox alignment="TOP_CENTER" spacing="30"
              style="-fx-padding: 30;">

            <VBox alignment="CENTER" spacing="6"
                  prefWidth="900"
                  style="-fx-padding: 26 40;
                         -fx-background-radius: 30;
                         -fx-background-color: linear-gradient(to right, #5240d0, #e3a628);
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 25, 0.35, 0, 6);">

                <Label text="All Reservations"
                       style="-fx-text-fill: white;
                              -fx-font-size: 30;
                              -fx-font-weight: bold;"/>

                <Label text="View all current reservations"
                       style="-fx-text-fill: #eeeeee;
                              -fx-font-size: 14;"/>
            </VBox>

            <VBox spacing="18" prefWidth="720"
                  style="-fx-padding: 22;
                         -fx-background-radius: 22;
                         -fx-background-color: #2b2f45;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 18, 0.3, 0, 5);">

                <TableView fx:id="reservationsTable"
                           prefHeight="380"
                           style="-fx-background-radius: 14;">

                    <columns>
                        <TableColumn fx:id="dateCol" text="Date" prefWidth="180"/>
                        <TableColumn fx:id="timeCol" text="Time" prefWidth="180"/>
                        <TableColumn fx:id="guestsCol" text="Guests" prefWidth="180"/>
                        <TableColumn fx:id="statusCol" text="Status" prefWidth="180"/>
                    </columns>

                </TableView>

            </VBox>

        </VBox>
    </center>

</BorderPane>
