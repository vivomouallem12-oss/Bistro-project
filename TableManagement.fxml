<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="1200" prefHeight="650"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.TablesManagementController"
            style="-fx-background-color: linear-gradient(to bottom, #0e1320, #111b34);">

    <!-- ================= TOP BAR ================= -->
    

    <!-- ================= MAIN CONTENT ================= -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30"
              style="-fx-padding: 30;">

            <!-- ===== HEADER ===== -->
            <VBox alignment="CENTER" spacing="6"
                  prefWidth="900"
                  style="-fx-padding: 26 40;
                         -fx-background-radius: 30;
                         -fx-background-color: linear-gradient(to right, #5240d0, #e3a628);
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 25, 0.35, 0, 6);">

                <Label text="Manage Tables"
                       style="-fx-text-fill: white;
                              -fx-font-size: 30;
                              -fx-font-weight: bold;"/>

                <Label text="Add, update or remove restaurant tables"
                       style="-fx-text-fill: #eeeeee;
                              -fx-font-size: 14;"/>
            </VBox>

            <!-- ===== CARD ===== -->
            <VBox spacing="18" prefWidth="520"
                  style="-fx-padding: 28;
                         -fx-background-radius: 22;
                         -fx-background-color: #2b2f45;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 18, 0.3, 0, 5);">

                <!-- Table -->
                <TableView fx:id="tablesTable"
                           prefHeight="260"
                           style="-fx-background-radius: 14;">

                    <columns>
                        <TableColumn fx:id="tableIdCol"
                                     text="Table ID"
                                     prefWidth="250"/>
                        <TableColumn fx:id="capacityCol"
                                     text="Capacity"
                                     prefWidth="250"/>
                    </columns>
                </TableView>

                <!-- Capacity -->
                <TextField fx:id="capacityField"
                           promptText="Number of seats"
                           style="-fx-background-radius: 12;"/>

                <!-- Buttons -->
                <HBox spacing="12" alignment="CENTER">

                    <Button text="Add Table"
                            onAction="#addTable"
                            prefWidth="150"
                            style="-fx-background-radius: 14;
                                   -fx-background-color: #5240d0;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;"/>

                    <Button text="Update Table"
                            onAction="#updateTable"
                            prefWidth="150"
                            style="-fx-background-radius: 14;
                                   -fx-background-color: #2b2f45;
                                   -fx-text-fill: white;"/>

                    <Button text="Delete Table"
                            onAction="#deleteTable"
                            prefWidth="150"
                            style="-fx-background-radius: 14;
                                   -fx-background-color: #8a1b1b;
                                   -fx-text-fill: white;"/>
                </HBox>

                <Label fx:id="statusLabel"
                       style="-fx-text-fill: #ffb74d;"/>

            </VBox>

        </VBox>
    </center>

</BorderPane>
